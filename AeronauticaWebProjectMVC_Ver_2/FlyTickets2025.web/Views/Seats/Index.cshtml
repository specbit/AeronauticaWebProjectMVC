@model FlyTickets2025.web.Models.SeatSearchViewModel

@{
    ViewData["Title"] = "Assentos";
}

<h1>Assentos</h1>

<form asp-action="Index" method="get" class="form-inline mb-3">
    <label for="FlightId" class="mr-2">Filtrar por Voo:</label>
    <select asp-for="FlightId" asp-items="Model.Flights" class="form-control mr-2">
        <option value="">Selecione um Voo</option>
    </select>
    <button type="submit" class="btn btn-primary mr-2">Buscar</button>
    <a asp-action="Index" class="btn btn-secondary">Limpar Filtro</a>
</form>

@* <p>
    <a asp-action="Create" class="btn btn-success">Criar Novo</a>
</p> *@

<table class="table">
    <thead>
        <tr>
            <th>@Html.DisplayNameFor(model => model.Seats.First().SeatNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Seats.First().Type)</th>
            <th>@Html.DisplayNameFor(model => model.Seats.First().Value)</th>
            <th>@Html.DisplayNameFor(model => model.Seats.First().IsAvailableForSale)</th>
            <th>@Html.DisplayNameFor(model => model.Seats.First().Flight.FlightNumber)</th>
            <th>@Html.DisplayNameFor(model => model.Seats.First().AircraftModel.Model)</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Seats)
        {
            <tr>
                <td>@item.SeatNumber</td>
                <td>@item.Type</td>
                <td>@item.Value</td>
                <td>@item.IsAvailableForSale</td>
                <td>@item.Flight?.FlightNumber</td>
                <td>@item.AircraftModel?.Model</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>