@model FlyTickets2025.web.Data.Entities.City

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>City</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.AirportName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.AirportName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Country)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Country)
        </dd>
        <dt class = "col-sm-2">
            @* @Html.DisplayNameFor(model => model.FlagImagePath) *@
            Flag
        </dt>
        <dd class = "col-sm-10">
            @* @Html.DisplayFor(model => model.FlagImagePath) *@

            @if (!string.IsNullOrEmpty(Model.FlagImagePath))
            {
                <img src="@Url.Content(Model.FlagImagePath)" alt="City Flag" style="width:100px; height:auto; border-radius:5px;" />
            }
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-danger">Edit</a> |
    <a asp-action="Index" class="btn btn-success">Back to List</a>
</div>
