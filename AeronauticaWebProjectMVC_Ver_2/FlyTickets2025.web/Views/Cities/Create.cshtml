@model FlyTickets2025.web.Models.CityViewModel

@{
    ViewData["Title"] = "Create new city";
}

<h1>Create new city</h1>

<h4>City</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AirportName" class="control-label"></label>
                <input asp-for="AirportName" class="form-control" />
                <span asp-validation-for="AirportName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Country" class="control-label"></label>
                <input asp-for="Country" class="form-control" />
                <span asp-validation-for="Country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="FlagImageFile" class="control-label"></label>
                <input asp-for="FlagImageFile" class="form-control" type="file" />
                <span asp-validation-for="FlagImageFile" class="text-danger"></span>
            </div>
            @* <div class="form-group">
                <label asp-for="FlagImagePath" class="control-label"></label>
                <input asp-for="FlagImagePath" class="form-control" />
                <span asp-validation-for="FlagImagePath" class="text-danger"></span>
            </div> *@
            <br />
            <div class="form-group">
                <button type="submit" class="btn btn-warning">Create</button>
                <a asp-action="Index" class="btn btn-success">Back to List</a>
            </div>
            <br />
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
