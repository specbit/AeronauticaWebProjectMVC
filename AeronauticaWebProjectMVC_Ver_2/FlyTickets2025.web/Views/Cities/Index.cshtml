@model IEnumerable<FlyTickets2025.web.Data.Entities.City>

@{
    ViewData["Title"] = "Index";
}

<h1>Cities Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AirportName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Country)
            </th>
            @* <th>
                @Html.DisplayNameFor(model => model.FlagImagePath)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AirportName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Country)
                </td>
                @* <td>
                @Html.DisplayFor(modelItem => item.FlagImagePath)
            </td> *@
                <td>
                    @if (!string.IsNullOrEmpty(item.FlagImagePath))
                    {
                        <img src="@Url.Content(item.FlagImagePath)" alt="Flag" style="width:50px;height:30px;max-width:100%;height:auto" />
                    }
                    else
                    {
                        <span>No Image</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Edit</a> |
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
