@{
    ViewData["Title"] = "Dashboard";
    var backgroundClass = "";
    if (User.IsInRole("Administrador"))
    {
        backgroundClass = "admin-dashboard-bg";
    }
    else if (User.IsInRole("Funcionário"))
    {
        backgroundClass = "employee-dashboard-bg";
    }
}

<div class="dashboard-container @backgroundClass">
    <div class="dashboard-content text-center">
        <h1 class="display-4">Welcome, @User.Identity.Name!</h1>
    </div>
</div>
